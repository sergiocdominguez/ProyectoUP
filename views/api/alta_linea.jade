extends ../layout.jade
block contenido
    div(class="col-md-8 remove-float center-block big-top-space")
        h1 Alta Linea
        form(action="/api/lineas", method="POST")
            div(class="form-group")
            div
                label(for="jugador1") Jugador 1
                select(id="jugador1", name="jugador1", class="form-control")
                    option  
                    for jugador in jugadores 
                        option(value="#{jugador._id}") #{jugador.nombre} #{jugador.apellido} (#{jugador.handicap})
                p
            div
                label(for="jugador2") Jugador 4
